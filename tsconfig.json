{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./",
    "moduleResolution": "Node",
    "paths": {
      "@src/*": ["./src/*"],
      "@libs/*": ["./src/libs/*"],
      "@config/*": ["./src/config/*"],
      "@errors": ["./src/errors"],
      "@urls": ["./src/urls"],
      "@urls/*": ["./src/urls/*"],
      "@probs": ["./src/probs"],
      "@probs/*": ["./src/probs/*"]
    },
    "typeRoots": ["./node_modules/@types", "./@types"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["./src/**/*", "./@types/**/*"],
  "exclude": ["node_modules"]
}
